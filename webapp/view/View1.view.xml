<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  controllerName="myapp.controller.View1"
>
  <Page title="View 1">
    <headerContent>
      <Button
        icon="sap-icon://action"
        tooltip="Go to next"
        press="onNext"
      />
    </headerContent>
    <content>
      <SearchField
        id="search"
        search="onSearch"
      />
      <List
        id="list"
        items="{/fruits}"
        itemPress="onItemPress"
        mode="SingleSelectMaster"
        delete="onDeleteItem"
        selectionChange="onItemPress"
      >
        <headerToolbar>
          <Toolbar>
            <ToolbarSpacer></ToolbarSpacer>
            <Button icon="sap-icon://delete" press="onMultiDelete"></Button>
          </Toolbar>
        </headerToolbar>
        <items>
          <ObjectListItem
            title="{name}"
            type="Navigation"
            intro="{healthBenefit}"
            number="{price}"
            numberUnit="{curr}"
            icon="{image}"
          >
            <attributes>
              <ObjectAttribute
                text="{taste}"
                title="Type"
              />
            </attributes>
            <firstStatus>
              <ObjectStatus
                text="{
                                path: 'availability',
                                formatter: '.formatter.getStatus'
                            }"
                state="{
                                path: 'availability',
                                formatter: '.formatter.getStatusText'
                            }"
              />
            </firstStatus>
          </ObjectListItem>
        </items>
      </List>
    </content>
  </Page>
</mvc:View>